<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bitetherem"
                android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:text="CHOOSE A CATEGORY"
        android:textColor="@color/PPR_FULL_BLACK"
        android:textSize="30sp"
        android:textStyle="italic"
        />
    <Spinner
        android:id="@+id/crypto_spinner"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textView1"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@color/PPR_BLUE700"
        />

    <Button
        android:id="@+id/go_btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/crypto_spinner"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="GO"
        android:textColor="#FFFFFF"  android:textSize="30sp"/>
</RelativeLayout>
